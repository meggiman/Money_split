<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.itet.pps.budgetSplit">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".contentProvider.budgetSplitContentProvider"
            android:authorities="ch.ethz.itet.pps_2014.budgetSplit"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".NewProject"
            android:exported="true"
            android:label="@string/title_activity_new_project"
            android:parentActivityName=".Main">
            <action android:name="android.intent.action.NEWPROJECT" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ethz.itet.pps.budgetSplit.Main" />
        </activity>
    </application>

</manifest>
