<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_mint</item>
        <item name="colorControlActivated">@color/accent_dark_mint</item>
        <item name="colorControlHighlight">@color/accent_light_mint</item>
        <item name="colorControlNormal">@color/accent_mint</item>

        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@color/primary_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">#ff5ab3de</item>
        <item name="android:padding">3dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
        <!-- Todo make button look like material raised design green background, white textcolor. -->
    </style>

    <style name="AppTheme.TextViewTitle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.TextViewTitle.TextViewSubtitle">
        <item name="android:textSize">@dimen/textView_normal_textViews</item>
    </style>
</resources>
