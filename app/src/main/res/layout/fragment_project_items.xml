<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:padding="@dimen/global_margins">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        tools:listitem="@layout/fragment_project_items_itemlist_row"
        tools:listheader="@layout/fragment_project_items_itemlist_header"
        android:drawSelectorOnTop="false"
        android:dividerHeight="1dp"
        android:divider="@color/divider_grey"
        android:layout_margin="@dimen/global_margins"/>

</LinearLayout>