<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/global_margins">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionNext"
        android:padding="@dimen/global_margins"/>

    <Spinner
        android:id="@+id/contacts_spinner"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/global_margins"/>

    <EditText
        android:id="@+id/editTextCurrencyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_optional"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionDone"
        android:padding="@dimen/global_margins"/>

    <ProgressBar
        android:id="@+id/new_projects_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contacts_spinner"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/activity_new_project_listView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contacts_spinner"
        android:layout_alignTop="@+id/contacts_spinner"
        android:layout_toRightOf="@+id/contacts_spinner"
        android:padding="@dimen/global_margins"/>


</RelativeLayout>






