<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant"
        android:textStyle="italic|bold"
        android:id="@+id/summary_listview_participant_name"
        android:textSize="12dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="10dp"
        android:id="@+id/summary_listview_tags"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/textViewExcludeItems"
        android:layout_toRightOf="@+id/textViewExcludeItems"
        android:layout_toEndOf="@+id/textViewExcludeItems"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="@string/tag_filter"
        android:id="@+id/textViewExcludeItems"
        android:layout_below="@+id/summary_listview_participant_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textSize="9dp"
        android:id="@+id/summary_listview_expences"
        android:layout_below="@+id/summary_listview_tags"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"/>

</RelativeLayout>