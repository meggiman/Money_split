<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.ethz.itet.pps.budgetSplit.Tags"
    android:padding="@dimen/global_margins">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="65dp"
        android:id="@+id/tag_selection_gridView_tags"
        android:numColumns="auto_fit"
        android:layout_centerHorizontal="true"
        tools:listitem="@layout/activity_tags_gridview_layout"
        android:drawSelectorOnTop="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/global_margins" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_tags"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false" />


</RelativeLayout>
