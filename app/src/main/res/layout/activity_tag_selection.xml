<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.ethz.itet.pps.budgetSplit.TagSelection">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item-/ContactName"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:id="@+id/tag_selection_variable"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tag_selection_button_add_tag1"
        android:layout_toEndOf="@+id/tag_selection_button_add_tag1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_tag"
        android:id="@+id/tag_selection_button_add_tag1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:id="@+id/tag_selection_gridView_tags"
        android:choiceMode="multipleChoiceModal"
        android:numColumns="auto_fit"
        android:layout_below="@+id/tag_selection_variable"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tag_selection_button_add_tag1"
        tools:listitem="@layout/activity_tags_gridview_layout"
        android:drawSelectorOnTop="false" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_tags"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_filter"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/tag_selection_tagfilter"
        android:layout_above="@+id/tag_selection_gridView_tags"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:id="@+id/tag_selection_ok"
        android:layout_alignTop="@+id/tag_selection_button_add_tag1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
